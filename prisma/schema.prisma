// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Project {
  id          Int           @id @default(autoincrement())
  title       String        @unique @db.VarChar(255)
  description String        @db.Text
  status      ProjectStatus @default(NOT_STARTED)
  stage       Stage         @default(NOT_STARTED)
  tags        Tag[]
  comment     String?       @db.Text
  url         String?
  issues      Issue[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  deadline    DateTime?
}

model Issue {
  id          Int         @id @default(autoincrement())
  project     Project     @relation(fields: [projectId], references: [id])
  title       String      @db.VarChar(255)
  description String      @db.Text
  status      IssueStatus @default(OPEN)
  type        IssueType
  priority    Priority
  comment     String?     @db.Text
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  deadline    DateTime?
  projectId   Int
}

model Tag {
  id       Int        @id @default(autoincrement())
  label    String     @db.VarChar(255)
  color    RadixColor
  projects Project[]
}

enum Stage {
  NOT_STARTED
  PLANNING
  DESIGNING
  IN_DEVELOPMENT
  OPTIMIZATION
  REFACTORING
  DEBUGGING
  TESTING
  IN_PRODUCTION
}

enum ProjectStatus {
  NOT_STARTED
  IN_PROGRESS
  DONE
  DELETED
}

enum IssueStatus {
  OPEN
  IN_PROGRESS
  BLOCKED
  WONT_DO
  DONE
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  EXCLUSIVE
}

enum IssueType {
  BUG
  IMPROVEMENT
  NEW_FEATURE
  TASK
}

enum RadixColor {
  tomato
  red
  ruby
  crimson
  pink
  plum
  purple
  violet
  iris
  indigo
  blue
  cyan
  teal
  jade
  green
  grass
  brown
  orange
  sky
  mint
  lime
  yellow
  amber
  gold
  bronze
  gray
}
